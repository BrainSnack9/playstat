{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/collect-matches",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/collect-team-data",
      "schedule": "30 18 * * *"
    },
    {
      "path": "/api/cron/generate-analysis",
      "schedule": "0 19 * * *"
    },
    {
      "path": "/api/cron/generate-daily-report",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "30 20 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
